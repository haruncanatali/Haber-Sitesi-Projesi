@model List<Yazi>
@{
    ViewData["Title"] = "YazilariListele";
}
<h3 class="display-4 text-center mb-2">Yazılar</h3>
@foreach (var item in Model)
{
    <div class="card mt-3 border-0" style="width: 18rem; display:inline-block; margin-left:30px;  ">
        <img src="@item.YaziResimUrl" class="card-img-top" alt="..." style="height:200px;">
        <div class="card-body">
            <h5 class="card-title text-center">@item.YaziBasligi</h5>
            <p class="text-center">@item.Yazari.YazarAdi @item.Yazari.YazarSoyadi</p>
        </div>
        <div class="row d-flex justify-content-center">
            <a asp-controller="Yazi" style="width:100px;" asp-action="YaziGetir" asp-route-id="@item.Id" class="btn btn-primary btn-sm mb-0 text-center">Yazıya Git</a>
        </div>
    </div>
}

