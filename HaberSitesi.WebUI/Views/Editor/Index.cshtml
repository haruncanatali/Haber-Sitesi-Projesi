@model Editor
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <h3 class="h1" style="display:inline-block; margin-left:100px; font-family: 'Great Vibes', cursive;">Hoşgeldiniz @Model.EditorAdi @Model.EditorSoyadi<a asp-controller="Editor" asp-action="LogOut" class="btn btn-danger btn-sm" style="display:inline-block; margin-left:730px; width:100px; margin-bottom:20px;"><span style="font-family:Arial;">Çıkış Yap</span></a></h3>
    
</div>
<div class="row">
    <div class="card border-0 mt-2" style="width:80rem; margin-left:30px;">
        <div class="card-header" style="background-color:#192a56; color:white; font-weight:bold;">
            Haberlerim
        </div>
        <div class="card-body p-0 mt-2">
            @if (Model.Haberleri.Count < 1)
            {
                <h3 class="alert alert-danger">Henüz haberiniz yok.</h3>
                <a asp-controller="Editor" asp-action="HaberEkle" class="btn btn-primary">Hemen Haber Ekle!</a>
            }
            else
            {
                @await Component.InvokeAsync("Haberlerim", new { id=Model.Id})
            }
        </div>
    </div>
</div>


