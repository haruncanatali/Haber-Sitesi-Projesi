@model List<Haber>
@{
    ViewData["Title"] = "HaberFiltrele";
}

<h2 class="text-center display-4">@Model[0].Kategorisi.KategoriAdi Kategorisine Ait Haberler</h2>
@foreach (var item in Model)
{
<div class="card mt-3" style="width: 18rem; display:inline-block; margin-left:30px;  ">
    <img src="@item.HaberAnaResimUrl" class="card-img-top" alt="..." style="height:200px;">
    <div class="card-body">
        <h5 class="card-title text-center">@item.HaberBasligi.Substring(0,30) ...</h5>
    </div>
    <div class="row d-flex justify-content-center">
        <a asp-controller="Haber" style="width:100px;" asp-action="HaberGetir" asp-route-id="@item.Id" class="btn btn-primary btn-sm mb-0 text-center">Habere Git</a>
    </div>
</div>
}
