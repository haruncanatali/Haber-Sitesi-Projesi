@model LoginModel
@{
    ViewData["Title"] = "Index";
}

<style>
    #main-div {
        background-color: #ecf0f1;
        height:500px;
    }
</style>


<div class="row" id="main-div">
    <h2 class="display-1 text-center">Giriş Yapın</h2>
    <form method="post" asp-controller="Login" asp-action="GirisYap">
        <div class="row d-flex justify-content-center">
            @Html.LabelFor(c => c.Username, "Kullanıcı Adınız", new { @class = "text-center", @style = "font-size:20px;" })
            @Html.TextBoxFor(c => c.Username, new { @class = "form-control text-center border-warning", @style = "width:300px;" })
        </div>
        <div class="row d-flex justify-content-center mt-3">
            @Html.LabelFor(c => c.Username, "Şifreniz", new { @class = "text-center", @style = "font-size:20px;" })
            @Html.PasswordFor(c => c.Password, new { @class = "form-control text-center border-warning", @style = "width:300px;" })
            
        </div>
        <div class="row mt-3">
            <div class="col-md-6 d-flex justify-content-end">
                <label>Editör Girişi @Html.CheckBoxFor(c => c.IsEditor)</label>
            </div>
            <div class="col-md-6 d-flex justify-content-start">
                <label>Yazar Girişi @Html.CheckBoxFor(c => c.IsAuthor)</label>
            </div>
        </div>
        <div class="row d-flex justify-content-center mt-4">
            <button class="btn btn-primary" type="submit" style="width:100px;">Giriş Yap</button>
        </div>
    </form>
</div>
<div class="text-danger" asp-validation-summary="All"></div>

