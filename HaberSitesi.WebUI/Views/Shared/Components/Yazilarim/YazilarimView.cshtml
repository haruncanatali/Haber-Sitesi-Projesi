@model List<Yazi>

<table class="table table-striped table-bordered table-sm mt-2">
    <thead>
        <tr>
            <th>#</th>
            <th>Yazı Başlığı</th>
            <th>Yazı Ana Resim URL</th>
            <th>Yazı İçeriği</th>
            <th>Yazar</th>
            <th>Veritabanı İşlemleri</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id.ToString()</td>
                <td>@item.YaziBasligi.Substring(0, 10) ...</td>
                <td>
                    <div class="d-flex justify-content-center">
                        <img class="img-responsive" src="@item.YaziResimUrl" alt="" width="100" height="70" />
                    </div>
                </td>
                <td>@item.YaziIcerigi.Substring(0, 20) ...</td>
                <td>@item.Yazari.YazarAdi&nbsp;@item.Yazari.YazarSoyadi</td>
                <td>
                    <a asp-controller="Yazar" asp-action="YaziGuncelle" asp-route-id="@item.Id" class="btn btn-warning btn-sm w-27" style="margin-left:5px;">Güncelle</a>
                    <a asp-controller="Yazar" asp-action="YaziSil" asp-route-id="@item.Id" class="btn btn-danger btn-sm w-25" style="margin-left:5px;">Sil</a>
                    <a asp-controller="Yazar" asp-action="YaziEkle" asp-route-id="@item.YazarId" class="btn btn-primary btn-sm w-25" style="margin-left:5px;">Ekle</a>
                </td>
            </tr>
        }
    </tbody>
</table>